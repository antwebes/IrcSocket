<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Nodeconfiguration</th>
    <th>Items</th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%=h node.name %></td>
    <td><%=h node.nodeconfiguration %></td>
    <td><%=h node.items %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New node', new_node_path %>